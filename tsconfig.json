{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    // "declarationDir": "./dts",
    "outDir": ".", 
    "target": "esnext",
    "module": "esnext",
    "diagnostics": true,
    "newLine": "LF",
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./scripts"
    ]
  },
  "include": [
    "./scripts/**/*.mts",
    "./v2/*.d.ts"
  ],
  "exclude": [
    "./scripts/auth-*",
    "./scripts/esi-*",
  ]
}
