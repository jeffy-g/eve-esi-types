{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "declaration": true,
    // "declarationDir": "./dts",
    "outDir": ".", 
    "target": "esnext",
    "module": "esnext",
    // "declaration": true,
    "diagnostics": true,
    "newLine": "LF",
    "strict": true,
    "moduleResolution": "node",
    "rootDirs": [
      "./scripts"
    ]
  },
  "include": [
    "./scripts/*.mts"
  ],
  "exclude": [
    "./scripts/auth-*"
  ]
}
